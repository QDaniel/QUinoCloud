@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Entity.GetImageUri(HttpContext)" class="img-thumbnail" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Owner.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Medias)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Entity?.Medias?.Any() ?? false)
                @foreach (var mrel in Model.Entity.Medias)
                {
                    <div>@mrel.Position - @mrel.Media?.DisplayTitle()</div>
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Entity.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
