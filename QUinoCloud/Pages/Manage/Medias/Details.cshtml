            <img src="@Model.Entity.GetImageUri(HttpContext)" class="img-thumbnail" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Album)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Album)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.TrackNr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.TrackNr)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Url)
